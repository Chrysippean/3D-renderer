###############################################################################
# Variables
###############################################################################
CC = gcc
CC_FLAGS = -std=c99 -Wall
SRC = ./src/*.c
LINKER_FLAGS = -lm -lSDL2
BIN_NAME = renderer

###############################################################################
# Makefile rules
###############################################################################
build:
	${CC} ${CC_FLAGS} ${SRC} ${LINKER_FLAGS} -o ${BIN_NAME}

run:
	./${BIN_NAME}

clean:
	rm ${BIN_NAME}
